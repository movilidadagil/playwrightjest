{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "strictNullChecks": false,
    "strict": true,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": false,
    "lib": [
      "es6",
      "es2015.promise",
      "dom"
    ]
  },
  "files": [
    "index.ts"
  ]
}
